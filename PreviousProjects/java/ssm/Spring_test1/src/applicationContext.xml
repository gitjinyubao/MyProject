<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean   id="test"   class="test.Test"   init-method="init">
    <property name="id"><value>3</value></property>
    <property name="name"  value="宝宝"></property>
    <property name="sex"   value='女'></property>
    <property name="select"   value="false"></property>
    </bean>
    
    <bean   id="demo"     class="test.Demo">
    <property name="t"   ref="test"></property>
    </bean>
</beans>