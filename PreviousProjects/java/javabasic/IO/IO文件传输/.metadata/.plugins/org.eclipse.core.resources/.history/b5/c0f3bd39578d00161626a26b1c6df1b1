package bianli;

import java.io.File;

public class Bianli {
	public static void listDirectory(File a) {
		// TODO Auto-generated method stub
       if(!a.exists())
       {
    	   System.out.println("目录："+a+"不存在");
       }
       if(!a.isDirectory())
       {
    	   System.out.println(a+"不是目录");
       }
       String[] e=a.list();
       for(String i:e)
       {
    	   System.out.println(a+i);
       }
